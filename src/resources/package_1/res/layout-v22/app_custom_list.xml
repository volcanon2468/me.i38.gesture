<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="10.0dp"
    android:paddingBottom="10.0dp"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingVertical="10.0dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://schemas.android.com/apk/res/android ">

  <ImageView
      android:id="@id/app_custom_icon"
      android:layout_width="48.0dp"
      android:layout_height="48.0dp"
      android:layout_marginLeft="10.0dp"
      android:layout_marginRight="10.0dp"
      android:layout_marginHorizontal="10.0dp" />

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="0.0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1.0">

    <TextView
        android:textSize="16.0dp"
        android:id="@id/app_custom_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="14.0dp"
        android:id="@id/app_custom_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
  </LinearLayout>

  <Switch
      android:id="@id/app_custom_switch"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10.0dp"
      android:layout_marginRight="10.0dp"
      android:layout_marginHorizontal="10.0dp" />
</LinearLayout>