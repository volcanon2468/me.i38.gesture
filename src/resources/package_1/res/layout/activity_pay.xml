<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
  <ScrollView android:layout_width="fill_parent"
              android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
      <TextView android:textSize="16.0sp"
                android:id="@id/free_expired_tip"
                android:padding="16.0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
      <Button android:textSize="16.0sp"
              android:textColor="#ffffff"
              android:id="@id/pay_redeem"
              android:background="#009285"
              android:padding="10.0dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/pay_redeem"
              android:layout_marginStart="16.0dp" />
      <TextView android:textSize="16.0sp"
                android:id="@id/pay_alipay_desc"
                android:padding="16.0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pay_alipay_desc" />
      <LinearLayout android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dp">
        <Button android:textSize="16.0sp"
                android:textColor="#ffffff"
                android:id="@id/pay_alipay"
                android:background="#009285"
                android:padding="10.0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pay_alipay"
                android:layout_marginStart="16.0dp" />
        <TextView android:textSize="32.0dp"
                  android:textStyle="bold"
                  android:textColor="#4caf50"
                  android:id="@id/pay_device_id"
                  android:paddingLeft="16.0dp"
                  android:focusable="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text=""
                  android:textIsSelectable="true" />
      </LinearLayout>
      <TextView android:textSize="16.0sp"
                android:id="@id/pay_key_tip"
                android:padding="16.0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pay_bind_desc" />
      <EditText android:id="@id/pay_key"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dp" />
      <Button android:textSize="16.0sp"
              android:textColor="#ffffff"
              android:id="@id/pay_bind"
              android:background="#009285"
              android:padding="10.0dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/pay_bind"
              android:layout_marginStart="16.0dp" />
      <Button android:textSize="16.0sp"
              android:textColor="#ffffff"
              android:id="@id/pay_unbind"
              android:background="#009285"
              android:padding="10.0dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/pay_unbind"
              android:layout_marginStart="16.0dp" />
    </LinearLayout>
  </ScrollView>
</LinearLayout>