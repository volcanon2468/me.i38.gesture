<?xml version='1.0' encoding='utf-8' ?>
<RelativeLayout android:descendantFocusability="blocksDescendants"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
  <ImageView android:id="@id/robot_config_icon"
             android:layout_width="48.0dp"
             android:layout_height="48.0dp"
             android:layout_marginLeft="16.0dp"
             android:layout_marginTop="8.0dp"
             android:layout_marginBottom="8.0dp"
             android:layout_alignParentLeft="true"
             android:layout_alignParentTop="true"
             android:layout_centerVertical="true" />
  <LinearLayout android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingRight="60.0dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dp"
                android:layout_toRightOf="@id/robot_config_icon"
                android:layout_centerVertical="true">
    <TextView android:textSize="16.0dp"
              android:id="@id/robot_config_name"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content" />
    <TextView android:textSize="12.0dp"
              android:id="@id/robot_config_title"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content" />
  </LinearLayout>
  <Switch android:id="@id/robot_config_switch"
          android:padding="10.0dp"
          android:layout_width="60.0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="15.0dp"
          android:layout_alignParentRight="true" />
</RelativeLayout>